<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/gbg">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="31 July, 2018"
            android:textColor="#E91E63"
            android:gravity="right"
            android:id="@+id/all_job_post_date"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textAppearance="?android:textAppearanceLarge"
            android:padding="2dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:id="@+id/all_job_post_title"
            android:textColor="@android:color/black"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textSize="15dp"
            android:maxLines="3"
            android:id="@+id/all_job_post_description"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Skills"
            android:textSize="15dp"
            android:id="@+id/all_job_post_skills"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Salary"
            android:textSize="15dp"
            android:id="@+id/all_job_post_salary"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFBC0B08"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>